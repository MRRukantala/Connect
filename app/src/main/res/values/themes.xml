<resources>
    <!-- Base application theme. -->
    <style name="Theme.Connect" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
    </style>


    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/white</item>
    </style>

    <style name="shimmer">
        <item name="background">@drawable/bg_shimmer</item>
    </style>

    <style name="shimmer.title">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">@dimen/dp20</item>
    </style>

    <style name="shimmer.subtitle">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">@dimen/dp20</item>
    </style>

    <style name="shimmer.bigCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_200dp</item>
    </style>

    <style name="Toolbar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />


</resources>